@model ContaModel
@{
    ViewData["title"] = "Excluir Conta";
}
<div class="mb-5 text-center">
    <h1>Deseja excluir a conta ?</h1>
</div>

<form method="post" asp-action="ExcluirConta">
    <input type="hidden" asp-for="Id" />
    <div class="row mb-3">

        <label for="NomeDaConta" class="col-sm-2 col-form-label">Nome Da Conta</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="NomeDaConta" id="NomeDaConta" >
            <span class="text-danger" asp-validation-for="NomeDaConta"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="Vencimento" class="col-sm-2 col-form-label">Vencimento</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" asp-for="Vencimento" id="Vencimento" >
            <span class="text-danger" asp-validation-for="Vencimento"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="Valor" class="col-sm-2 col-form-label">Valor</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Valor" id="Valor" >
            <span class="text-danger" asp-validation-for="Valor"></span>
        </div>
    </div>

    <div class="d-flex gap-5 mt-5">
        <button type="submit" class="btn btn-warning w-50" asp-action="EditarConta">Editar</button>
        <a class="btn btn-primary w-50" asp-action="Index">Voltar</a>
    </div>
</form>