@model ContaModel
@{
    ViewData["title"] = "Cadastrar Conta";
}
@{

    <form method="post" asp-controller="ContasEmAberto" asp-action="AdicionarConta">
        <label for="Nome" class="col-sm-2 col-form-label">Nome</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="NomeDaConta" id="Nome" placeholder="Ex: Energia, Àgua, Internet...">
            <span class="text-danger" asp-validation-for="NomeDaConta"></span>
        </div>
        <label for="Vencimento" class="col-sm-2 col-form-label">Vencimento</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" asp-for="Vencimento" id="Vencimento">
            <span class="text-danger" asp-validation-for="Vencimento"></span>
        </div>
        <label for="Valor" class="col-sm-2 col-form-label">Valor</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Valor" id="Nome" placeholder="Ex: 100,00...">
            <span class="text-danger" asp-validation-for="Valor"></span>
        </div>
       
        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50"´asp-asp-controller="ContasEmAberto" asp-action="AdicionarConta">Cadastrar</button>
            <a class="btn btn-primary w-50" asp-controller="ContasEmAberto" asp-action="Index">Voltar</a>
        </div>
    </form>
}
