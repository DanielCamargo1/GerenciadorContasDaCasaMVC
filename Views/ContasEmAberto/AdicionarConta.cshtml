@model ContaModel

@{
    ViewData["Title"] = "Cadastrar Conta";
}

<h2>Cadastrar Conta</h2>

<form method="post" asp-action="AdicionarConta">
    <div class="form-group">
        <label asp-for="NomeDaConta" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="NomeDaConta" id="Nome" placeholder="Ex: Energia, Água, Internet...">
            <span class="text-danger" asp-validation-for="NomeDaConta"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Vencimento" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="date" class="form-control" asp-for="Vencimento" id="Vencimento">
            <span class="text-danger" asp-validation-for="Vencimento"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Valor" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Valor" id="Nome" placeholder="Ex: 100,00...">
            <span class="text-danger" asp-validation-for="Valor"></span>
        </div>
    </div>
    <div class="d-flex gap-5 mt-5">
        <button type="submit" class="btn btn-success w-50">Cadastrar</button>
        <a class="btn btn-primary w-50" asp-action="Index">Voltar</a>
    </div>
</form>
