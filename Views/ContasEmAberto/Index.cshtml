@model IEnumerable<ContaHoueseMvc.Models.ContaModel>

@{
    ViewData["Title"] = "Contas em Aberto";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Contas em Aberto</h1>
        <a class="btn btn-success" asp-controller="ContasEmAberto" asp-action="AdicionarConta">
            <i class="fas fa-plus"></i> Cadastrar Conta
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Nome Da Conta</th>
                    <th scope="col">Vencimento</th>
                    <th scope="col">Valor</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var conta in Model)
                {
                    <tr>
                        <td>@conta.NomeDaConta</td>
                        <td>@conta.Vencimento.ToString("dd/MM/yyyy")</td>
                        <td>@conta.Valor.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            Não há contas em aberto no momento.
        </div>
    }
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
}
