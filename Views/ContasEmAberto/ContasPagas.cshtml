@model IEnumerable<ContaModel>

@{
    ViewData["Title"] = "Contas Pagas";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="display-4">CONTAS PAGAS</h1>  <svg xmlns="http://www.w3.org/2000/svg" width="46" color="green" height="46" fill="currentColor" class="bi bi-check2-circle" viewBox="0 0 16 16">
            <path d="M2.5 8a5.5 5.5 0 0 1 8.25-4.764.5.5 0 0 0 .5-.866A6.5 6.5 0 1 0 14.5 8a.5.5 0 0 0-1 0 5.5 5.5 0 1 1-11 0" />
            <path d="M15.354 3.354a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0z" />
        </svg>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var conta in Model)
            {
                @if (conta.Situacao == true)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h3 class="card-title">@conta.NomeDaConta</h3>
                                <p class="card-text">
                                    <strong>Vencimento:</strong> @conta.Vencimento.ToString("dd/MM/yyyy")<br>
                                    <strong>Valor:</strong> @conta.Valor.ToString("C")
                                </p>>
                                <p>Paga!</p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            Não há contas pagas no momento.
        </div>
    }
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
}
